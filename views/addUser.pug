    script.
        const formAddUser = document.querySelector("#form-add-user");
        const spinnerContent = document.querySelector(".spinner-content");

        //Creando elemento alert para avisar que se registro el usuario
        const successMessage = document.createElement("DIV");
            successMessage.setAttribute('id', 'popSuccessUser');
            successMessage.classList.add('overlay', 'overlay-success');

        formAddUser.onsubmit = function(event){
            event.preventDefault();
            spinnerContent.innerHTML = `<div class="fa-3x"><i class=" fas fa-spinner fa-pulse"></i></div>`;
            successMessage.innerHTML = "<div class='overlay-success-container'><i class='fa-solid fa-check-double'></i><span>Usuario agregado con exito</span></div>";
            const formDataUser = new FormData(formAddUser);
            fetch('/user-add', {
                method: "POST",
                body: formDataUser
            })
            .then(response => response.json())
            .then(success => {
                console.log(success);
                if(success.message)
                    spinnerContent.style.display = "none";

                popUpUser.classList.toggle("closeWindowUser");
                document.body.appendChild(successMessage);
                setTimeout(function(){successMessage.remove()}, 4000);
            })
            .catch(error => console.log(error));
        };
